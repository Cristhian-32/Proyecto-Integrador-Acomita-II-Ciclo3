<%- include('../partials/head'); %>

    <body>
        <%- include('../partials/header'); %>
            <div class="container">
                <main class="mt-3 pt-3">
                    <div class="py-5 text-center">
                        <img class="d-block mx-auto mb-2" src="../images/logoactividad.png" alt="" width="180"
                            height="180">
                        <h2>Registro de Actividades</h2>
                        <p class="lead">Validaci√≥n y registro de actividades internas
                        </p>
                    </div>
                    <div class="col-md-7 col-lg-8 mx-auto">
                        <h4 class="mb-3">Rellene los campos</h4>
                        <form class="needs-validation" novalidate action="">
                            <div class="row g-3">
                                <div class="col-sm-9">
                                    <label for="firstName" class="form-label">Nombre de la actividad<span
                                            class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="firstName" placeholder="" value=""
                                        required>
                                    <div class="invalid-feedback">
                                        Campo Requerido
                                    </div>
                                </div>

                                <div class="col-sm-4">
                                    <label for="username" class="form-label">Fecha<span
                                            class="text-danger">*</span></label>
                                    <input type="date" class="form-control" id="username" required>
                                    <div class="invalid-feedback">
                                        Campo requerido.
                                    </div>
                                </div>

                                <div class="col-sm-4">
                                    <label for="username" class="form-label">Hora<span
                                            class="text-danger">*</span></label>
                                    <input type="time" class="form-control" id="username" required>
                                    <div class="invalid-feedback">
                                        Campo requerido.
                                    </div>
                                </div>

                                <div class="col-sm-4">
                                    <label for="firstName" class="form-label">Lugar<span
                                            class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="firstName" placeholder="" value=""
                                        required>
                                    <div class="invalid-feedback">
                                        Campo Requerido
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="exampleFormControlInput1" class="form-label">Remitente</label>
                                    <input type="email" class="form-control" id="exampleFormControlInput1"
                                        placeholder="Presidente">
                                </div>
                                <div class="mb-3">
                                    <label for="exampleFormControlTextarea1" class="form-label">Comunicado</label>
                                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="6"></textarea>
                                </div>

                            </div>

                            <footer class="my-5 pt-5 text-muted text-center text-small">
                                <p class="mb-1">&copy; Acomita2</p>
                                <ul class="list-inline">
                                    <li class="list-inline-item"><a href="#">Privacy</a></li>
                                    <li class="list-inline-item"><a href="#">Terms</a></li>
                                    <li class="list-inline-item"><a href="#">Support</a></li>
                                </ul>
                            </footer>
                        </form>
                    </div>
                </main>
            </div>
            <%- include('../partials/footer'); %>
    </body>